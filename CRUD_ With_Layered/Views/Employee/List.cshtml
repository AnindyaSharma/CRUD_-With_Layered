@using CRUD__With_Layered.Model.EntityModels
@model List<CRUD__With_Layered.Model.EntityModels.Employee>


    <h1>Employee List</h1>
    <div class="container">
        <a asp-action="Create" type="button" class="btn btn-outline-primary">Create Employee</a>
        <br />
        <br />
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Salary</th>
                    <th>Department</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Employee employee in Model)
                {
                    <tr>
                        <td>@employee.Name</td>
                        <td>@employee.Email</td>
                        <td>@employee.Salary</td>
                        <td>@(employee.Department == null ? "N/A" : employee.Department.Name)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@employee.Id" type="button" class="btn btn-outline-warning">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@employee.Id" type="button" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

